@{
    ViewData["Title"] = "Truy vấn toàn cục";
}

<h2><i class="fas fa-search me-2"></i>Truy vấn toàn cục</h2>
<p class="lead"><i class="fas fa-database me-2"></i>Thực hiện các truy vấn đặc biệt trên dữ liệu phân tán</p>

<div class="row g-4 mt-2">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-file-invoice me-2 text-primary"></i>Truy vấn 1
                </h5>
                <p class="card-text">Biên lai của các lớp do giảng viên <strong>GV5</strong> giảng dạy</p>
                <a asp-action="Query1" class="btn btn-primary">
                    <i class="fas fa-eye me-2"></i>Xem kết quả
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-calculator me-2 text-success"></i>Truy vấn 2
                </h5>
                <p class="card-text">Tổng học phí sinh viên đóng cho một lớp</p>
                <a asp-action="Query2" class="btn btn-success">
                    <i class="fas fa-play me-2"></i>Thực hiện
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-calendar-alt me-2 text-info"></i>Truy vấn 3
                </h5>
                <p class="card-text">Các lớp mở trong tháng <strong>08 năm 2012</strong></p>
                <a asp-action="Query3" class="btn btn-info text-white">
                    <i class="fas fa-eye me-2"></i>Xem kết quả
                </a>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-edit me-2 text-warning"></i>Truy vấn 4
                </h5>
                <p class="card-text">Cập nhật khoa của câu lạc bộ (CLB 5: <strong>K3 → K2</strong>)</p>
                <a asp-action="Query4" class="btn btn-warning">
                    <i class="fas fa-play me-2"></i>Thực hiện
                </a>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-home me-2"></i>Quay lại trang chủ
    </a>
</div>
