@model ClubManagement.Models.CauLacBo
@{
    ViewData["Title"] = "Sửa câu lạc bộ";
}

<h2>Sửa thông tin câu lạc bộ</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="MaCLB" class="form-label"></label>
                <input asp-for="MaCLB" class="form-control" readonly />
            </div>
            
            <div class="mb-3">
                <label asp-for="TenCLB" class="form-label"></label>
                <input asp-for="TenCLB" class="form-control" />
                <span asp-validation-for="TenCLB" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="TenKhoa" class="form-label"></label>
                <input asp-for="TenKhoa" class="form-control" />
                <span asp-validation-for="TenKhoa" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="KhuVuc" class="form-label"></label>
                <select asp-for="KhuVuc" class="form-select">
                    <option value="TPHCM">TP. Hồ Chí Minh</option>
                    <option value="HaNoi">Hà Nội</option>
                </select>
                <span asp-validation-for="KhuVuc" class="text-danger"></span>
            </div>
            
            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Cập nhật
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
