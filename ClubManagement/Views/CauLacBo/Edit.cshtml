@model ClubManagement.Models.CauLacBo
@{
    ViewData["Title"] = "Sửa câu lạc bộ";
}

<h2>Sửa thông tin câu lạc bộ</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="form-group">
        <label asp-for="MaCLB"></label>
        <input asp-for="MaCLB" class="form-control" readonly />
        <span asp-validation-for="MaCLB" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="TenCLB"></label>
        <input asp-for="TenCLB" class="form-control" />
        <span asp-validation-for="TenCLB" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="TenKhoa"></label>
        <input asp-for="TenKhoa" class="form-control" />
        <span asp-validation-for="TenKhoa" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
