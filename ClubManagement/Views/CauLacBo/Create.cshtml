@model ClubManagement.Models.CauLacBo
@{
    ViewData["Title"] = "Thêm câu lạc bộ";
}

<h2><i class="fas fa-plus-circle me-2"></i>Thêm câu lạc bộ mới</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="MaCLB"><i class="fas fa-hashtag me-2"></i>Mã câu lạc bộ</label>
                <input asp-for="MaCLB" class="form-control" type="number" placeholder="Nhập mã câu lạc bộ" />
            </div>
            <div class="form-group">
                <label asp-for="TenCLB"><i class="fas fa-building me-2"></i>Tên câu lạc bộ</label>
                <input asp-for="TenCLB" class="form-control" placeholder="Nhập tên câu lạc bộ" />
            </div>
            <div class="form-group">
                <label asp-for="TenKhoa"><i class="fas fa-university me-2"></i>Tên khoa</label>
                <input asp-for="TenKhoa" class="form-control" placeholder="Ví dụ: K1, K2, K3" />
            </div>
            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Lưu
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
