@model ClubManagement.Models.CauLacBo
@{
    ViewData["Title"] = "Thêm câu lạc bộ";
}

<h2>Thêm câu lạc bộ mới</h2>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Mã câu lạc bộ sẽ được tự động tạo
            </div>
            
            <div class="mb-3">
                <label asp-for="TenCLB" class="form-label"></label>
                <input asp-for="TenCLB" class="form-control" placeholder="Nhập tên câu lạc bộ" />
                <span asp-validation-for="TenCLB" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="TenKhoa" class="form-label"></label>
                <input asp-for="TenKhoa" class="form-control" placeholder="Ví dụ: CNTT, Thể thao, Nghệ thuật" />
                <span asp-validation-for="TenKhoa" class="text-danger"></span>
            </div>
            
            <div class="mb-3">
                <label asp-for="KhuVuc" class="form-label"></label>
                <select asp-for="KhuVuc" class="form-select">
                    <option value="">-- Chọn khu vực --</option>
                    <option value="TPHCM">TP. Hồ Chí Minh</option>
                    <option value="HaNoi">Hà Nội</option>
                </select>
                <span asp-validation-for="KhuVuc" class="text-danger"></span>
            </div>
            
            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Lưu
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
