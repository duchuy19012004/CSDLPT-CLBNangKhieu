@model IEnumerable<ClubManagement.Models.CauLacBo>
@{
    ViewData["Title"] = "Danh sách câu lạc bộ";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-building me-2"></i>Danh sách câu lạc bộ</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Thêm mới
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th><i class="fas fa-hashtag me-2"></i>Mã CLB</th>
                <th><i class="fas fa-building me-2"></i>Tên câu lạc bộ</th>
                <th><i class="fas fa-university me-2"></i>Tên khoa</th>
                <th class="text-center"><i class="fas fa-cog me-2"></i>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><strong>@item.MaCLB</strong></td>
                    <td>@item.TenCLB</td>
                    <td><span class="badge bg-info">@item.TenKhoa</span></td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@item.MaCLB" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit me-1"></i>Sửa
                        </a>
                        <form asp-action="Delete" asp-route-id="@item.MaCLB" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xóa?')">
                                <i class="fas fa-trash me-1"></i>Xóa
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle me-2"></i>Chưa có câu lạc bộ nào. Hãy thêm mới!
    </div>
}
