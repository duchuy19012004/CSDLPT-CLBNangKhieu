@model ClubManagement.Models.GiangVien
@{
    ViewData["Title"] = "Thêm giảng viên";
}

<h2>Thêm giảng viên mới</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="MaGV">Mã giảng viên</label>
        <input asp-for="MaGV" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="HoTenGV">Họ tên</label>
        <input asp-for="HoTenGV" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MaCLB">Câu lạc bộ</label>
        <select asp-for="MaCLB" class="form-control">
            @foreach (var clb in ViewBag.CauLacBos)
            {
                <option value="@clb.MaCLB">@clb.TenCLB</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
