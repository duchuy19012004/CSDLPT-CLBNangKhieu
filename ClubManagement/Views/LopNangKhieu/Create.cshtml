@model ClubManagement.Models.LopNangKhieu
@{
    ViewData["Title"] = "Thêm lớp năng khiếu";
}

<h2>Thêm lớp năng khiếu mới</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> Mã lớp sẽ được tự động tạo
    </div>
    
    <div class="form-group">
        <label asp-for="NgayMo"></label>
        <input asp-for="NgayMo" class="form-control" type="date" />
        <span asp-validation-for="NgayMo" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="MaGV"></label>
        <select asp-for="MaGV" class="form-control">
            <option value="">-- Chọn giảng viên --</option>
            @foreach (var gv in ViewBag.GiangViens)
            {
                <option value="@gv.MaGV">@gv.HoTenGV</option>
            }
        </select>
        <span asp-validation-for="MaGV" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="HocPhi"></label>
        <input asp-for="HocPhi" class="form-control" type="number" step="1000" />
        <span asp-validation-for="HocPhi" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
