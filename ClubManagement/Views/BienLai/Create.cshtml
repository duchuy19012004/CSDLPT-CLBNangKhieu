@model ClubManagement.Models.BienLai
@{
    ViewData["Title"] = "Thêm biên lai";
}

<h2>Thêm biên lai mới</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> Số biên lai sẽ được tự động tạo
    </div>
    
    <div class="form-group">
        <label asp-for="Thang"></label>
        <input asp-for="Thang" class="form-control" type="number" min="1" max="12" />
        <span asp-validation-for="Thang" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Nam"></label>
        <input asp-for="Nam" class="form-control" type="number" />
        <span asp-validation-for="Nam" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="MaLop"></label>
        <select asp-for="MaLop" class="form-control">
            <option value="">-- Chọn lớp năng khiếu --</option>
            @foreach (var lop in ViewBag.LopNangKhieus)
            {
                <option value="@lop.MaLop">Lớp @lop.MaLop - Học phí: @lop.HocPhi.ToString("N0") VNĐ</option>
            }
        </select>
        <span asp-validation-for="MaLop" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label for="MaSV">Tên sinh viên</label>
        <select asp-for="MaSV" class="form-control">
            <option value="">-- Chọn sinh viên --</option>
            @foreach (var sv in ViewBag.SinhViens)
            {
                <option value="@sv.MaSV">@sv.HoTenSV</option>
            }
        </select>
        <span asp-validation-for="MaSV" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="SoTien"></label>
        <input asp-for="SoTien" class="form-control" type="number" step="1" min="0" />
        <span asp-validation-for="SoTien" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
